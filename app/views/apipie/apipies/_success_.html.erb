<% show_metadata = success.reject { |succ| succ[:metadata].blank? }.size > 0 %>


    <%#= t('apipie.success_code', default: 'Code') %>
    <%#= t('apipie.success_description', default: [:description, 'Description']) %>

    <% if show_metadata %><%= t('apipie.success_metadata', default: [:metadata, 'Metadata']) %><% end %>

  <% success.each do |succ| %>
    <%= succ[:code] %>
      <%= succ[:description] %><br>
      <% if show_metadata %>
        <%= render(:partial => "metadata", :locals => {:meta => succ[:metadata]}) unless succ[:metadata].blank? %>
      <% end %>
  <% end %>

<% success.each do |succ| %>
  <% if succ[:sample] %>
    <pre class="prettyprint">
      <%= succ[:sample].html_safe %>
    </pre>
  <% end %>
  <% if succ != @method[:successes] %>
    OR
  <% end %>
<% end %>
